<div class="container py-5">
  <div class="text-center">
    <h1 class="mb-4">{{restaurant.name}}</h1>

  </div>
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8 mx-auto">
      <p class="text-secondary mb-1">
        <strong>Category : </strong>
        {{restaurant.category}}
      </p>

      <p class="text-secondary mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          Siteï¼š
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="text-secondary mb-1">
        <strong>
          <i class="fas fa-mobile-alt pr-2"></i>
          Phone : 
        </strong>
        {{restaurant.phone}}
      </p>

      <p class="text-secondary mb-1">
        <strong>Description : </strong>
        {{restaurant.description}}
      </p>

      <img class="rounded mb-4" src="{{restaurant.image}}" alt="{{restaurant.name}}" style="max-height: 300px;">
    </div>
  </div>
</div>